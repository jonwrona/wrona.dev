---
// Window size display wrapper for React component
import WindowSizeDisplay from "./WindowSizeDisplay.tsx";
---

<WindowSizeDisplay client:load />

<style is:global>
  .window-size-display {
    position: fixed;
    bottom: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.8);
    color: #00ff00;
    padding: 0.5rem 1rem;
    border-radius: 0.25rem;
    font-family: monospace;
    font-size: 0.875rem;
    z-index: 9999;
    pointer-events: none;
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .window-size-display .label {
    opacity: 0.7;
  }

  .window-size-display .dimensions {
    font-weight: bold;
  }
</style>
