---
import NavButton from "./NavButton.astro";

// Navigation component
interface Props {}

const {} = Astro.props;
---

<nav class="nav">
  <NavButton href="/" ariaLabel="Home" highlightColor="green">
    <i class="hn hn-home-solid"></i>
  </NavButton>
  <NavButton href="/about" highlightColor="amber">Who?</NavButton>
  <NavButton href="/blog" highlightColor="cyan">Rambles</NavButton>
  <NavButton href="/projects" highlightColor="red">Stuff</NavButton>
  <NavButton ariaLabel="Settings">
    <i class="hn hn-cog-solid"></i>
  </NavButton>
</nav>
<div class="nav-spacer"></div>

<style lang="scss">
  .nav {
    position: fixed;
    background: var(--bg-secondary);
    left: 50%;
    border-radius: 0.5rem;
    transform: translateX(-50%);
    bottom: 1rem;
    height: 4rem;
    display: flex;
    gap: 0.5rem;
    box-shadow: 4px 4px var(--shadow-interactive);
    border-top: 1px solid var(--shadow-interactive);
    border-left: 1px solid var(--shadow-interactive);
    padding: 0.5rem;
    justify-content: center;
    font-size: 1.5rem;
    font-family: var(--font-display);
  }

  .nav-spacer {
    height: 8rem;
    content: "";
  }
</style>
